<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      
      <div class="pull-right">
        <% if user_signed_in? %>
          <%= t 'common.hello' %> <%= current_user.username %> |
          <%= link_to t('common.profile'), profile_path %> |
          <%= link_to 'Logout', destroy_user_session_path, :method => :delete %> 
        <% else %>
          <%= link_to 'Login', new_user_session_path %> 
        <% end %>
      </div>
      
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to 'Beersquare', root_path, :class => 'brand' %>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="<%= 'active' if params[:controller] == 'beers' %>"><%= link_to t('common.beers'), beers_path %></li>
          <li class="<%= 'active' if params[:controller] == 'breweries' %>"><%= link_to t('common.breweries'), breweries_path %></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div> <!-- .container -->
  </div> <!-- .navbar-inner -->
</div> <!-- .navbar -->
