<input type="hidden" value="<%= @brewery.latitude %>" id="brew_lat"/>
<input type="hidden" value="<%= @brewery.longitude %>" id="brew_lgt"/>


<div class="row-fluid">
  
  <%= link_to t('common.edit'), edit_brewery_path(@brewery), :class => 'btn pull-right' %>
  <h1><div class="flag flag-<%= @brewery.country.downcase %>"></div><%= @brewery.name %></h1>

  <div class="brewery-cover row-fluid">
    <%= image_tag @brewery.photo.url(:medium) unless @brewery.photo? %>
  </div>

  <div class="row-fluid brewery-info">
    <div class="span6 ">
      <div class="form-inline">
        <div class="row-fluid">
          <div class="span6"><span class="label-right"><%= t('common.address') %></span></div>
          <div class="span6"><span><%= @brewery.address %></span></div>
        </div>
        <div class="row-fluid">
          <div class="span6"><span class="label-right"><%= t('.city') %></span></div>
          <div class="span6"><span><%= @brewery.city %></span></div>
        </div>
        <div class="row-fluid">
          <div class="span6"><span class="label-right"><%= t('.state') %></span></div>
          <div class="span6"><span><%= @brewery.state %></span></div>
        </div>
        <div class="row-fluid">
          <div class="span6"><span class="label-right"><%= t('.country') %></span></div>
          <div class="span6"><span><%= @brewery.country %></span></div>
        </div>
      </div>
    </div>
    <div class="span6">
      <div class="hide" id="brew_map" style="width:100%; height:300px;"></div>
    </div>
  </div>

  <h2>Cervezas de esta marca:</h2>

  <div class="beer_list">
    <%= render :partial => 'shared/beer', :collection => @beers %>
  </div>
  

</div>