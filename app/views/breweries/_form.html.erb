<%= form_for(@brewery) do |f| %>
  <fieldset>
    <% if @brewery.errors.any? %>
      <div id="error_explanation">
      <h2><%= pluralize(@brewery.errors.count, "error") %> prohibited this brewery from being saved:</h2>
      <ul>
        <% @brewery.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :country %>
    <%= select("brewery", "country", Country.all {|c| [ c[0], c[1] ] }, {:include_blank => 'Select'}) %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>

    <%= f.label :photo %>
    <%= f.file_field :photo %>

    <div class="form-actions">
      <div class="pull-right">
        <%= f.submit :class => 'btn btn-primary'%>
      </div>
    </div>

  </fieldset>
<% end %>
